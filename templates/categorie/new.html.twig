{% extends 'base.html.twig' %}

{% block title %}New Categorie{% endblock %}

{% block body %}
    <h1>Create new Categorie</h1>
    {{ form_start(form) }}
    {{ form_row(form.nom) }}
    {{ form_row(form.prix) }}
    {{ form_row(form.stock) }}
    {{ form_row(form.categorie) }}

    <a href="{{ lienAjoutCategorie }}">Ajouter une catégorie</a>

    {{ form_row(form.description) }}
    {{ form_row(form.photo) }}

    {{ form_row(form.valider) }}
    {{ form_end(form) }}

    {{ include('categorie/_form.html.twig') }}

    <a href="{{ form.vars.data.lienAjoutCategorie }}">Ajouter une catégorie</a>
    <a href="{{ path('app_categorie_index') }}">Back to list</a>
{% endblock %}