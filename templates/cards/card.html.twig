{% block body %}
    <div class="card">
        <div class="card__image-holder">
            <img class="card__image" src="{{ asset('assets/uploaded_files/' ~ product.photo) }}" alt="wave"/>
        </div>
        <div class="card-title">
            <a href="#" class="toggle-info btn">
                <span class="left"></span>
                <span class="right"></span>
            </a>
            <h2>
                {{ product.nom }}
                <small>{{ product.categorie.nom }}</small>
            </h2>
        </div>
        <div class="card-flap flap1">
            <div class="card-description">
                {{ product.description }}
            </div>
            <div class="card-flap flap2">
                <div class="card-actions">
                    <a href="{{ path('app_produit_id', {'id': product.id} ) }}" class="btn">Plus d'infos</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/js/cards.js') }}"></script>
{% endblock %}